# KurbanCebimde Environment Variables
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=postgresql://postgres:password@postgres:5432/kurban_cebimde
DB_PASSWORD=your_secure_database_password

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_secure_redis_password

# JWT Configuration
SECRET_KEY=your_super_secret_jwt_key_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# External Services - LiveKit
LIVEKIT_URL=wss://your-livekit-server.com
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# External Services - Agora
AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERT=your_agora_certificate

# Notification Services - Expo Push
EXPO_ACCESS_TOKEN=your_expo_access_token

# Notification Services - Twilio SMS
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Payment Gateways - Ä°yzico
IYZICO_API_KEY=your_iyzico_api_key
IYZICO_SECRET_KEY=your_iyzico_secret_key
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com

# Payment Gateways - Stripe (Alternative)
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_NAME=KurbanCebimde
SMTP_FROM_EMAIL=noreply@kurbancebimde.com

# Security Configuration
ALLOWED_ORIGINS=https://admin.kurbancebimde.com,https://www.kurbancebimde.com
CORS_ORIGINS=https://admin.kurbancebimde.com,https://www.kurbancebimde.com

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Monitoring & Logging
DEBUG=false
LOG_LEVEL=INFO
MAINTENANCE_MODE=false

# File Storage
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760  # 10MB

# Domain Configuration
API_DOMAIN=api.kurbancebimde.com
ADMIN_DOMAIN=admin.kurbancebimde.com
WEB_DOMAIN=www.kurbancebimde.com

# SSL Configuration
SSL_CERT_PATH=/etc/letsencrypt/live
SSL_KEY_PATH=/etc/letsencrypt/live

# Backup Configuration
BACKUP_DIR=/backups
BACKUP_RETENTION_DAYS=30

# Performance Configuration
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1024
KEEPALIVE_TIMEOUT=65

# Cache Configuration
CACHE_TTL=3600
SESSION_TTL=86400

# Feature Flags
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_CERTIFICATE_GENERATION=true
ENABLE_LIVE_STREAMING=true
ENABLE_PAYMENT_PROCESSING=true

# Development/Testing
TEST_MODE=false
MOCK_PAYMENTS=false
MOCK_NOTIFICATIONS=false
