# Kurban Cebimde - Backend Environment Variables
# Copy this file to .env and fill in your values

# Application
APP_ENV=dev
APP_NAME=Kurban Cebimde API
APP_VERSION=1.0.0
DEBUG=true

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql+psycopg://app:app@localhost:5432/kurban_cebimde
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis (Cache & Queue)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# Storage (MinIO/S3)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin123
S3_BUCKET=kurban-certificates
S3_REGION=eu-central-1
S3_USE_SSL=false
S3_FORCE_PATH_STYLE=true

# Payment Gateway
PAYMENT_PROVIDER=stripe  # stripe, iyzico
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
IYZICO_API_KEY=your_iyzico_api_key
IYZICO_SECRET_KEY=your_iyzico_secret_key

# Email
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL=no-reply@kurbancebimde.com
FROM_NAME=Kurban Cebimde

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=true
LOG_LEVEL=INFO

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8081", "http://localhost:19006"]
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_LOGIN=5

# WebSocket
WS_ENABLED=true
WS_PING_INTERVAL=20
WS_PING_TIMEOUT=20

# File Upload
MAX_FILE_SIZE=25MB
ALLOWED_FILE_TYPES=["image/jpeg", "image/png", "image/gif", "application/pdf"]

# Development
RELOAD=true
WORKERS=1
HOST=0.0.0.0
PORT=8000
